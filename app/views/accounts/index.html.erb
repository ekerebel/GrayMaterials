<table width="100%">
  <tr>
    <td>
      <h1>My Seller Accounts</h1>
    </td>
    <td align="right">
      <form action="accounts/new">
        <input type="submit" class="btn btn-primary" value="New Account", data: {no_turbolink: true}>
      </form>
    </td>  
  </tr>
</table>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="center">Name</th>
      <th class="center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
